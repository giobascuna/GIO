<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.patrick18.gio.esc"
    android:background="#ff9eafff">

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Engineering Student Council"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/listView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="#ffffffff" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Announcements"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <GridView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/gridView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:background="#ffffffff" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Headlines"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/gridView"
        android:layout_alignRight="@+id/gridView"
        android:layout_alignEnd="@+id/gridView" />

</RelativeLayout>
